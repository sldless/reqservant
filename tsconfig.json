{
  "exclude": ["node_modules"],

  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "outDir": "./dist/",
    "rootDir": "./src/",
    "strict": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowUnreachableCode": false
  }
}
